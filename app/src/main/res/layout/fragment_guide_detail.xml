<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nathanromike.yes_you_can.ui.GuideDetailFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="I'm the title of this guide!"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/coverImageView"
                android:transitionName="coverImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/robologo"
                android:layout_below="@+id/titleTextView"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/introTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_below="@+id/coverImageView"
                android:textAlignment="center"
                android:text="I'm the intro of this guide!" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:id="@+id/listView"
                android:layout_below="@+id/introTextView"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

</FrameLayout>
