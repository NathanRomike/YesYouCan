<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InstructionDetailFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/coverImageView"
                android:transitionName="coverImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/robologo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:maxHeight="300dp" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="I'm the title of this guide!"
                android:textSize="30sp"
                android:layout_below="@+id/coverImageView"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/introTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_below="@+id/titleTextView"
                android:layout_alignParentStart="true" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:id="@+id/listView"
                android:layout_below="@+id/introTextView"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

</FrameLayout>
